<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StartupSearchEngine</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Oswald&display=swap" rel="stylesheet">

    <!-- Your site CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/StartupSearchEngine.styles.css" asp-append-version="true" />

    <!-- Material Icons CSS for search icon -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />

    <style>
        /* Optional: Align the material icon inside search button better */
        .btn .material-icons {
            vertical-align: middle;
            font-size: 20px;
            pointer-events: none; /* So clicking icon triggers button click */
        }
    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-light bg-light shadow-sm">
            <div class="container d-flex align-items-center justify-content-between">
                <div class="d-flex align-items-center">
                    <img src="~/lib/yellow2.jpg" alt="Logo" style="height: 40px; margin-right: 10px;" />
                    <a class="navbar-brand brand-title" href="/">StartupSearchEngine</a>

                    @* <a class="navbar-brand fs-4 fw-bold text-primary" asp-area="" asp-controller="Home" asp-action="Index"> *@
                        @* StartupSearchEngine *@
                @* <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index"> *@
                    
                    @* <span class="fs-3 fw-bold text-primary">StartupSearchEngine</span> *@
                </a>
                </div>


                @* <a class="navbar-brand fs-3 fw-bold text-primary" asp-area="" asp-controller="Home" asp-action="Index">  *@
                @*      StartupSearchEngine  *@
                @*  </a>  *@
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="text-center text-muted py-2">
        &copy; 2025 StartupSearchEngine
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
